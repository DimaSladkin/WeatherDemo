<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="00:00"
        android:textColor="@color/text"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dailyImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_cloud"
        app:layout_constraintBottom_toBottomOf="@id/timeTv"
        app:layout_constraintStart_toEndOf="@id/timeTv"
        app:layout_constraintTop_toTopOf="@id/timeTv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tempTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/temp"
        android:textColor="@color/text"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dailyImage"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/visibilityTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/km"
        android:textColor="@color/text"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/visibilityImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_binoculars"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/timeTv"
        app:layout_constraintEnd_toStartOf="@id/visibilityTv"
        app:layout_constraintTop_toTopOf="@id/timeTv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/humidityTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/percents"
        android:textColor="@color/text"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/visibilityImg"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/humidityImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_humidity"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/timeTv"
        app:layout_constraintEnd_toStartOf="@id/humidityTv"
        app:layout_constraintTop_toTopOf="@id/timeTv" />

</androidx.constraintlayout.widget.ConstraintLayout>